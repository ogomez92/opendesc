{
  "name": "tts",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "build": "react-router build",
    "build:electron": "tsc -p electron/tsconfig.json && node -e \"const fs=require('fs');['main','preload'].forEach(f=>{if(fs.existsSync('dist-electron/'+f+'.js')){fs.renameSync('dist-electron/'+f+'.js','dist-electron/'+f+'.cjs')}})\"",
    "start": "npm run build && npm run build:electron && electron .",
    "package": "npm run build && npm run build:electron && electron-packager . TextToSpeech --platform=win32 --arch=x64 --out=release --overwrite --ignore=node_modules/.bin --prune=true --asar=true",
    "release": "npm run build && npm run build:electron && electron-builder --publish always"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-router/node": "^7.9.2",
    "@react-router/serve": "^7.9.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.6.3",
    "isbot": "^5.1.31",
    "lucide-react": "^0.554.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.3.5",
    "react-router": "^7.9.2",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@react-router/dev": "^7.9.2",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-packager": "^17.1.2",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wait-on": "^8.0.5"
  }
}
